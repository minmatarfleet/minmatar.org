---
import { i18n } from '@helpers/i18n'
const { lang, t, translatePath } = i18n(Astro.url)

import { prod_error_messages } from '@helpers/env'

import type { DoctrineType } from '@dtypes/layout_components'
import { fetch_doctrines } from '@helpers/fetching/doctrines'
import { SHIP_TYPES_SORTED } from '@helpers/eve'
import { get_locations_by_ids } from '@helpers/api.minmatar.org/locations'
import type { Location } from '@dtypes/api.minmatar.org'

let doctrines:DoctrineType[] = []
let fetch_doctrines_error:string | null = null
let all_locations:Location[] = []
let location_doctrine_counts_map: Map<number, number> = new Map()
let filtered_doctrines:DoctrineType[] = []

try {
    doctrines = await fetch_doctrines()

    // Collect all unique location_ids from all doctrines and count doctrines per location
    doctrines.forEach(doctrine => {
        if (doctrine.location_ids && doctrine.location_ids.length > 0) {
            doctrine.location_ids.forEach(location_id => {
                location_doctrine_counts_map.set(location_id, (location_doctrine_counts_map.get(location_id) || 0) + 1)
            })
        }
    })

    const all_location_ids = Array.from(location_doctrine_counts_map.keys())

    // Fetch all locations that have doctrines
    if (all_location_ids.length > 0) {
        try {
            const fetched_locations = await get_locations_by_ids(all_location_ids)
            // Only include locations that have doctrines, have a valid short_name, and sort by name
            all_locations = fetched_locations
                .filter(loc => 
                    location_doctrine_counts_map.has(loc.location_id) && 
                    loc.short_name && 
                    loc.short_name.trim() !== ''
                )
                .sort((a, b) => a.location_name.localeCompare(b.location_name))
        } catch (error) {
            console.error('Error fetching locations:', error)
        }
    }

    // Get active location from query parameter
    const location_id_param = Astro.url.searchParams.get('location_id')
    const active_location_id = location_id_param ? parseInt(location_id_param) : null

    // Filter doctrines by location if a location is selected
    filtered_doctrines = doctrines
    if (active_location_id) {
        filtered_doctrines = doctrines.filter(doctrine => 
            doctrine.location_ids && doctrine.location_ids.includes(active_location_id)
        )
    }

    // Sort all doctrines by ship type (no grouping by doctrine type)
    filtered_doctrines = filtered_doctrines.sort((a, b) => 
        SHIP_TYPES_SORTED.indexOf(a.primary_fittings[0].ship_type) - SHIP_TYPES_SORTED.indexOf(b.primary_fittings[0].ship_type)
    )
} catch (error) {
    fetch_doctrines_error = prod_error_messages() ? t('fetch_doctrines_error') : error.message
}

const are_sigs_doctrines = doctrines.find((doctrine) => doctrine.sigs.length > 0)

const DOCTRINES_PARTIAL_URL = translatePath(`/partials/doctrines_component`)

import { query_string } from '@helpers/string';
import { semantic_list } from '@helpers/array';

import Viewport from '@layouts/Viewport.astro';

import PageWide from '@components/page/PageWide.astro';
import PageTitle from '@components/page/PageTitle.astro';

import TextBox from '@components/layout/TextBox.astro';

import Flexblock from '@components/compositions/Flexblock.astro';
import FlexInline from '@components/compositions/FlexInline.astro';
import Grid from '@components/compositions/Grid.astro';
import Wrapper from '@components/compositions/Wrapper.astro';

import Button from '@components/blocks/Button.astro';
import DoctrineCard from '@components/blocks/DoctrineCard.astro';
import ErrorRefetch from '@components/blocks/ErrorRefetch.astro';
import StagingsReel from '@components/blocks/StagingsReel.astro';
import StagingReelSlide from '@components/blocks/StagingReelSlide.astro';
import StylessButton from '@components/blocks/StylessButton.astro';

const REEL_GAP = 20
const location_id_param = Astro.url.searchParams.get('location_id')
const active_location_id = location_id_param ? parseInt(location_id_param) : null
const page_title = t('doctrines.page_title');
---

<Viewport
    title={page_title}
    meta_description={t('doctrines.alliance.meta_description')}
>
    <PageWide
        cover={{
            image: "/images/doctrines-cover.jpg",
            image_990: "/images/doctrines-cover.jpg",
            animated: false,
            scrollable: true,
            overlay: true
        }}
        x-data={`{
            show_all: $persist(false),
            doctrines_count: ${doctrines.length},
        }`}
    >
        <FlexInline slot="header" justification='space-between' class="[ w-full ]">
            <FlexInline>
                <Flexblock gap="var(--space-3xs)">
                    <PageTitle>
                        {page_title}
                    </PageTitle>
                    <small x-text={`\`\${doctrines_count} \${doctrines_count != 1 ? '${t('doctrines').toLowerCase()}' : '${t('doctrine').toLowerCase()}'}\``}>
                        {doctrines.length} {doctrines.length != 1 ? t('doctrines').toLowerCase() : t('doctrines').toLowerCase()}
                    </small>
                </Flexblock>
            </FlexInline>
        </FlexInline>

        {are_sigs_doctrines &&
            <FlexInline slot="subheader">
                <Button
                    type="button"
                    size='sm'
                    x-on:click="show_all = !show_all"
                    x-text={`show_all ? '${t('hide_sigs_doctrines')}' : '${t('show_sigs_doctrines')}'`}
                >
                    {t('show_sigs_doctrines')}
                </Button>
            </FlexInline>
        }

        {fetch_doctrines_error ?
            <ErrorRefetch
                args={{
                    partial: DOCTRINES_PARTIAL_URL,
                    message: fetch_doctrines_error,
                    delay: 0,
                }}
            />
            :
            <Flexblock role="list" gap='var(--space-xl)'>
                {all_locations.length > 0 &&
                    <StagingsReel gap={REEL_GAP}>
                        {all_locations.map(location => {
                            const doctrine_count = location_doctrine_counts_map.get(location.location_id) || 0
                            return (
                                <StagingReelSlide gap={REEL_GAP}>
                                    <Wrapper padding_block='0' padding_inline='0' max_width='350px'>
                                        {active_location_id === location.location_id ?
                                            <Flexblock gap="var(--space-3xs)">
                                                <h2>{location.short_name}</h2>
                                                <small>{doctrine_count} {doctrine_count !== 1 ? t('doctrines').toLowerCase() : t('doctrine').toLowerCase()}</small>
                                            </Flexblock>
                                            :
                                            <StylessButton class="[ w-full staging-selector ]" href={translatePath(`/ships/doctrines/list/?${query_string({location_id: location.location_id})}`)}>
                                                <Flexblock gap="var(--space-3xs)">
                                                    <h2>{location.short_name}</h2>
                                                    <small>{doctrine_count} {doctrine_count !== 1 ? t('doctrines').toLowerCase() : t('doctrine').toLowerCase()}</small>
                                                </Flexblock>
                                            </StylessButton>
                                        }
                                    </Wrapper>
                                </StagingReelSlide>
                            )
                        })}
                    </StagingsReel>
                }

                <Grid
                    role="list"
                    class="[ w-full grid-fill ]"
                    min_item_width='240px'
                    row_gap='var(--space-3xs)'
                    column_gap='var(--space-3xs)'
                >
                    {filtered_doctrines.map((doctrine) =>
                        <a
                            class="[ doctrine-card-container ]"
                            x-show={`(${doctrine.sigs.length > 0}) ? show_all : true`}
                            href={translatePath(`/ships/doctrines/list/${doctrine.id}`)}
                        >
                            <DoctrineCard
                                doctrine={doctrine}
                                subtitle={semantic_list(lang, doctrine.primary_fittings.map((primary_fitting) => primary_fitting.ship_name))}
                            />
                        </a>
                    )}
                </Grid>
            </Flexblock>
        }
    </PageWide>
</Viewport>

<style lang="scss">
    .doctrine-groups:not(:has(.doctrine-card-container:not([style="display: none;"]))) {
        border: 0;
        clip: rect(0 0 0 0);
        height: auto;
        margin: 0;
        overflow: hidden;
        padding: 0;
        position: absolute;
        width: 1px;
        white-space: nowrap;
        left: 0;
        top: 0;
    }

    .staging-selector {
        h2 {
            color: var(--faded);
        }

        small {
            color: var(--fleet-yellow);
        }
    }
</style>