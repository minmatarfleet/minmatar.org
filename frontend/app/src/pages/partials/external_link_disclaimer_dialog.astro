---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

import Flexblock from '@components/compositions/Flexblock.astro'
import SwitchSquare from '@components/blocks/SwitchSquare.astro'
---

<Flexblock gap='var(--space-l)'>
    <p>{t('leaving_website_description')}</p>
    <SwitchSquare
        label={t('dont_show_anymore')}
        description={t('can_be_restored')}
        x-data={`{
            hide_external_link_disclaimer: $persist(false),
        }`}
        x-model="hide_external_link_disclaimer"
    />
</Flexblock>