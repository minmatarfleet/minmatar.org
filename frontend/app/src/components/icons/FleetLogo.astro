---
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
    width?: string,
    height?: string
}

const { width = '36' } = Astro.props;
---
<img src="/images/fleet-logo.png" width={width} height={width} alt={t('icon.fleet.alt')} />

<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>