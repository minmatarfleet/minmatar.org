---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

interface Props {
    width?:     string;
    height?:    string;
    square?:  boolean;
}

const {
    width = '48',
    square = false,
} = Astro.props;
---
<img loading="lazy" src={square ? '/images/fleet-logo-square.svg' : '/images/fleet-logo.svg'} width={width} height={width} alt={t('icon.fleet.alt')} />

<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>