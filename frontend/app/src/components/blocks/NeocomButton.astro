---
import { i18n } from '@helpers/i18n'
const { translatePath } = i18n(Astro.url)

interface Props {
    active?:        boolean;
    title?:         string;
    description?:   string;
    tag?:           string;
    href?:          string;
    external?:      boolean;
    overlay?:       boolean;
    [propName: string]: any;
}

const {
    active = false,
    title,
    description,
    tag,
    href,
    external = false,
    overlay = false,
    ...attributes
} = Astro.props;

const optional_attributes = {
    ...(external && { "target": "_blank" }),
}

import StylessButton from '@components/blocks/StylessButton.astro';
import Tippy from '@components/blocks/Tippy.astro';
---

<StylessButton
    href={ href }
    class:list={[ 'neocom-button', { active: active, overlay: overlay } ]}
    {...optional_attributes}
    {...attributes}
    data-tippy-delay="[1000, 200]"
    data-tippy-placement='right'
>
    {title &&
        <Tippy
            data-tippy-placement="right"
            partial={`${translatePath('/partials/normal_tooltip')}?title=${title}${description ? `&description=${description}` : ''}${tag ? `&tag=${tag}` : ''}`}
            height='70px'
            width='340px'
            element='div'
        >
            <slot />
        </Tippy>
    }
    {!title &&
        <slot />
    }
</StylessButton>

<style lang="scss">
    a,
    button {
        text-decoration: none;
        display: flex;
        position: relative;
        height: 48px;
        width: 48px;
        justify-content: center;
        align-items: center;

        &:focus-visible {
            outline: none;
        }

        &:after {
            content: ' ';
            position: absolute;
            right: 0;
            width: 2px;
            top: 15px;
            bottom: 15px;
            background-color: transparent;
            transition: var(--fast-transition);
        }

        &:active:after,
        &:focus:after, {
            background-color: var(--highlight);
        }

        &.overlay {
            background-color: rgba(0, 0, 0, 0.5);
        }

        &.active:before {
            content: ' ';
            z-index: 1;
            position: absolute;
            border-radius: 50%;
            filter: blur(4px);
            right: 2px;
            width: 3px;
            top: 12px;
            bottom: 12px;
            background-color: var(--highlight);
        }

        &.active:after {
            content: ' ';
            position: absolute;
            right: 0;
            width: 2px;
            top: 10px;
            bottom: 10px;
            background-color: var(--highlight);
        }
    }

    :global(a.neocom-button img),
    :global(button.neocom-button img) {
        transition: var(--fast-transition);
        filter: drop-shadow(0 0 5px transparent);
    }

    :global(a.neocom-button:hover img),
    :global(button.neocom-button:hover img) {
        filter: drop-shadow(0 0 5px white);
    }
</style>