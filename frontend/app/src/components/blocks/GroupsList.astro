---
import { i18n } from '@helpers/i18n'
const { t, translatePath } = i18n(Astro.url)

import type { GroupItemUI, GroupItemType } from '@dtypes/layout_components'

interface Props {
    groups?:            GroupItemUI[];
    groups_type:        GroupItemType;
}

const {
    groups = [],
    groups_type,
} = Astro.props

import Grid from '@components/compositions/Grid.astro';

import GroupCard from '@components/blocks/GroupCard.astro';
---

<Grid
    role="list"
    class="[ w-full grid-fill max-w-245.5 ]"
    min_item_width='240px'
    row_gap='var(--space-3xs)'
    column_gap='var(--space-3xs)'
>
    {groups.map((group) =>
        <GroupCard group={group} groups_type={groups_type} />
    )}
    {groups.length == 0 &&
        <slot>
            {t('empty_groups_text')}
        </slot>
    }
</Grid>