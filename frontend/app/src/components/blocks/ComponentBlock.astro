---
import Wrapper from '@components/compositions/Wrapper.astro';

interface Props {
    padding_block?:     string;
    padding_inline?:    string;
    width?:             'narrow' | 'normal' | 'thin';
    heavier?:           boolean;
    [propName: string]: any;
}

const {
    padding_block = 'var(--component-padding-block)',
    padding_inline = 'var(--space-l-xl)',
    width = 'normal',
    heavier = false,
    ...attributes
} = Astro.props

const effect = (heavier ? 'light-transparency-heavier' : 'light-transparency')

delete attributes.class
---

<Wrapper
    class:list={['[ card border component ]', Astro.props.class, effect]}
    padding_block={padding_block}
    padding_inline={padding_inline}
    max_width={(width == 'narrow' ? 'var(--max-text-width)' : width == 'thin' ? '650px' : '100%')}
    {...attributes}>
    <slot />
</Wrapper>