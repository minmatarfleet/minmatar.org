---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

interface Props {
    is_random:  boolean;
}

const {
    is_random,
} = Astro.props

import Dropdown from '@components/blocks/Dropdown.astro';
import StationInfo from '@components/blocks/StationInfo.astro';
import StationsSelector from '@components/blocks/StationsSelector.astro';
---

<Dropdown>    
    <StationInfo
        system="Amamake"
        security="0.4"
        constellation="Hed"
        region="Heimatar"
        station_name="Amamake - 5 times nearly AT winners"
        station_description={t('fw_hq_description')}
        slot="button"
    />

    <StationsSelector selected={!is_random ? 'amamake' : undefined} />
</Dropdown>