---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

interface Props {
    is_random:  boolean;
}

const {
    is_random,
} = Astro.props

import Dropdown from '@components/blocks/Dropdown.astro';
import StationInfo from '@components/blocks/StationInfo.astro';
import StationsSelector from '@components/blocks/StationsSelector.astro';
---

<Dropdown>
    <StationInfo
        system="Nakah"
        security="0.4"
        constellation="Bedaleya"
        region="Derelik"
        station_name="Naka - Banana"
        station_description={t('nakah_hq_description')}
        slot="button"
    />
    
    <StationsSelector selected={!is_random ? 'nakah' : undefined} />
</Dropdown>