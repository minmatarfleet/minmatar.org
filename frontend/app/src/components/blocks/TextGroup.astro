---
import Flexblock from "@components/compositions/Flexblock.astro";

import type { spaces } from '@dtypes/layout_components'

interface Props {
    title?:             false | string;
    gap?:               spaces;
    [propName: string]: any;
}

const {
    title = false,
    gap = 'var(--space-3xs)',
    ...attributes
} = Astro.props
---

<Flexblock gap={gap}>
    {title &&
        <h4>{title}</h4>
    }
    <p {...attributes}><slot /></p>
</Flexblock>

<style lang="scss">
    p {
        font-size: var(--step--1);
        font-weight: 400;
    }
</style>