---
interface Props {
    width?: string;
    [propName: string]: any;
}

const {
    width = '100%',
    ...attributes
} = Astro.props

const TextareaElement = 'textarea';
---

<TextareaElement {...attributes}><slot /></TextareaElement>

<style lang="scss">
    textarea {
        --background-color: var(--color_prop);
        --flex-inline--gap: var(--space-xs);

        field-sizing: content;
        resize: none;
        min-height: 20px;
        max-height: 132px;
        border: none;
        color: var(--form-color);
        background-color: transparent;
        transition: var(--fast-transition);
        width: 100%;

        &:focus-visible {
            outline: none;
        }

        &.collapsible {
            width: var(--space-l);
            padding: var(--space-s) var(--space-3xs);

            &:focus {
                width: auto;
                padding: var(--space-s) var(--space-s-l);
            }
        }
    }
</style>