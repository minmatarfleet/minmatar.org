---
import { i18n } from '@helpers/i18n'
const { t, translatePath } = i18n(Astro.url)

import type { CorporationObject } from '@dtypes/layout_components'

import { query_string } from '@helpers/string';

interface Props {
    corporation:            CorporationObject;
    is_user_corporation?:   boolean;
    picture_placement?:     'left' | 'right';
    
}

const {
    corporation,
    is_user_corporation = false,
    picture_placement = 'left',
} = Astro.props

const MULA_SOLDATS_ID = 2122950343
const DIGITAL_BLINK_ID = 2121171605

import { marked } from 'marked';
import { renderer } from '@helpers/marked';

import Flexblock from '@components/compositions/Flexblock.astro';

import CorporationSlide from '@components/blocks/CorporationSlide.astro';
import StylessButton from '@components/blocks/StylessButton.astro';
---

<CorporationSlide
    id="darktribe-slide"
    ceo_image='/images/corporations/darktribe/ceo.png'
    ceo_character_id={DIGITAL_BLINK_ID}
    corporation={corporation}
    is_user_corporation={is_user_corporation}
    picture_placement='left'
    mirror_slide={picture_placement === 'right'}
>
    <StylessButton
        class="[ co-ceo ]"
        slot="coceo"
        x-data={`{
            show_character_modal() {
                show_modal({
                    partial: '${translatePath('/partials/character_modal_component/')}?${query_string({
                        character_id: MULA_SOLDATS_ID.toString(),
                    })}',
                })
            }
        }`}
        x-on:click="show_character_modal()"
    >
        <img src="/images/corporations/darktribe/co-ceo.png" height="496" width="940" />
    </StylessButton>
    
    <img slot="ships" class="[ tempest ]" src="/images/corporations/darktribe/tempest.png" />
    <img slot="ships" class="[ stabber_2 ]" src="/images/corporations/darktribe/stabber.png" />
    <img slot="ships" class="[ cenotaph ]" src="/images/corporations/darktribe/cenotaph.png" />

    <Flexblock set:html={marked.parse(corporation.introduction ? corporation.introduction : t('darktribe_description_fallback'), { renderer })} />
</CorporationSlide>

<style lang="scss">
    img {
        image-rendering: pixelated;
    }

    .co-ceo {
        z-index: 11;
        position: absolute;
        cursor: pointer;
        transform: scale(0.5);
        opacity: 0;
        height: 99%;
        left: 3%;
        top: 0;

        img {
            mask-image: linear-gradient(to bottom, black 70%, transparent 95%);
            width: auto;
            height: 100%;
        }

        &:focus-visible {
            outline: none;
        }

        &:focus-visible,
        &:hover {
            img {
                filter: drop-shadow(0px 0px 3px rgba(255, 255, 255, 0.75));
            }
        }
    }

    .tempest {
        position: absolute;
        top: 14%;
        left: -39%;
        height: auto;
        width: 64%;
        z-index: 0;
        transform: scale(0);
    }

    .stabber_2 {
        position: absolute;
        top: 41%;
        left: -20%;
        width: 46%;
        height: auto;
        z-index: 2;
        transform: scale(0);
    }

    .cenotaph {
        position: absolute;
        top: 39%;
        left: -12%;
        width: 61%;
        height: auto;
        z-index: 2;
        transform: scale(0);
    }

    @keyframes tempest {
        from {
            transform: scale(0);
            top: 36%;
            left: -34%;
        }

        to {
            transform: scale(1);
            top: -3%;
            left: 34%;
        }
    }

    @keyframes stabber_2 {
        from {
            transform: scale(0);
            top: 41%;
            left: -20%;
        }

        to {
            transform: scale(1);
            top: 31%;
            left: 49%;
        }
    }

    @keyframes cenotaph {
        from {
            transform: scale(0);
            left: -62%;
            top: 25%;
        }

        to {
            transform: scale(1);
            top: 44%;
            left: 44%;
        }
    }

    @keyframes coceo {
        from {
            transform: scale(0.5);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

<style lang="scss" is:global>
    #darktribe-slide .ceo {
        left: -10%;
    }

    .swiper-slide-active {
        .tempest {
            animation: tempest cubic-bezier(0.390, 0.575, 0.565, 1.000) both 0.45s;
            animation-delay: 2s;
            animation-iteration-count: 1;
            transform-origin: top right;
            animation-fill-mode: forwards;
        }
        
        .stabber_2 {
            animation: stabber_2 cubic-bezier(0.390, 0.575, 0.565, 1.000) both 0.45s;
            animation-delay: 2.2s;
            animation-iteration-count: 1;
            transform-origin: top right;
            animation-fill-mode: forwards;
        }
        
        .cenotaph {
            animation: cenotaph cubic-bezier(0.390, 0.575, 0.565, 1.000) both 0.45s;
            animation-delay: 2.4s;
            animation-iteration-count: 1;
            transform-origin: top right;
            animation-fill-mode: forwards;
        }

        .co-ceo {
            animation: coceo ease-out 1.5s;
            animation-delay: 0s;
            animation-iteration-count: 1;
            transform-origin: bottom;
            animation-fill-mode: forwards;
        }
    }
</style>