---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

interface Props {
    is_random:  boolean;
}

const {
    is_random,
} = Astro.props

import Dropdown from '@components/blocks/Dropdown.astro';
import StationInfo from '@components/blocks/StationInfo.astro';
import StationsSelector from '@components/blocks/StationsSelector.astro';
---

<Dropdown>
    <StationInfo
        system="Evati"
        security="0.2"
        constellation="Aldodan"
        region="Metropoolis"
        station_name="Evati - Scurry Tzu's House of Wisdom"
        station_description={t('evati_hq_description')}
        slot="button"
    />
    
    <StationsSelector selected={!is_random ? 'evati' : undefined} />
</Dropdown>