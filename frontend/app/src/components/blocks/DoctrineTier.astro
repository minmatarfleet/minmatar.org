---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

import type { FittingItem, IdealComposition } from '@dtypes/layout_components';

interface Props {
    fittings:           FittingItem[];
    ideal_composition?: IdealComposition;
}

const {
    fittings,
    ideal_composition = {},
} = Astro.props

import Grid from '@components/compositions/Grid.astro';
import FittingCard from '@components/blocks/FittingCard.astro';
---

<Grid
    role="list"
    class="[ w-full grid-fill ]"
    min_item_width='240px'
    row_gap='var(--space-3xs)'
    column_gap='var(--space-3xs)'
>
    {fittings.map((fitting) => 
        <div
            class="[ items-center flex ]"
            role="listitem"
        >
            <FittingCard
                id={fitting.id}
                ship_id={fitting.ship_id}
                fitting_name={fitting.fitting_name}
                subtitle={fitting.id.toString() in ideal_composition ? `${ideal_composition[fitting.id.toString()]} ${ideal_composition[fitting.id.toString()] === 1 ? t('ship') : t('ships')}` : null}
                eft_format={fitting.eft_format}
            />
        </div>
    )}
</Grid>