---
import type { CargoItem } from '@dtypes/layout_components';

interface Props {
    fittable:           CargoItem;
    [propName: string]: any;
}

const {
    fittable,
    ...attributes
} = Astro.props

import { get_item_icon } from '@helpers/eve_image_server';

import Badge from '@components/blocks/Badge.astro';
---

<Badge
    title={`${fittable.amount} x ${fittable.name}`}
    image={get_item_icon(fittable.id)}
    highlight={false}
    {...attributes}
/>