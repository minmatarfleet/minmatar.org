---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

import Flexblock from '@components/compositions/Flexblock.astro';
---

<Flexblock
    gap='0'
    class="[ asset-location-item ] [ w-full ]"
    {...Astro.props}
    x-data={`{
        get_assets_count() {
            return assets_location.assets.reduce( (c, i) => c + (i.count ?? 1) , 0 )
        }
    }`}
>
    <span class="text-[var(--highlight)]" x-text="assets_location.location_name" />
    <small x-text={`\`\${get_assets_count()} \${get_assets_count() != 1 ? '${t('assets').toLowerCase()}' : '${t('asset').toLowerCase()}'} ${t('in_inventory')}\``} />
</Flexblock>