---
import { i18n } from '@helpers/i18n'
const { t } = i18n(Astro.url)

import '@toast-ui/editor/dist/toastui-editor.css';
import '@toast-ui/editor/dist/theme/toastui-editor-dark.css';
import { marked } from 'marked';
import RifterIcon from '@components/icons/RifterIcon.astro';
import Wrapper from '@components/compositions/Wrapper.astro';

interface Props {
    content?:   string;
}

const {
    content = '',
} = Astro.props
---

<Wrapper
    class="[ tui-editor-loader ]"
    centered={true}
    padding_block='var(--space-3xl)'
>
    <RifterIcon />
</Wrapper>
<div id="editor" style="display: none" set:html={content} />

<script>
    const { Editor } = await import('@toast-ui/editor')

    let throttle_timer

    /* Remove autogenerated content from lite-youtube elements */
    document.querySelectorAll('lite-youtube').forEach(el => el.innerHTML = '')

    const content = document.getElementById('editor')?.innerHTML
    
    var editor = new Editor({
        el: document.querySelector('#editor'),
        minHeight: '500px',
        height: 'auto',
        initialEditType: 'markdown',
        previewStyle: 'vertical',
        theme: 'dark',
        hideModeSwitch: true,
        autofocus: false,
        customHTMLSanitizer: (html) => html,
        toolbarItems: [
            ['heading', 'bold', 'italic', 'strike'],
            ['hr', 'quote'],
            ['ul', 'ol'],
            ['table', 'image', 'link', {
                name: 'lite-youtube',
                tooltip: 'Insert YouTube (lite)',
                className: 'tui-toolbar-icons lite-youtube',
                text: 'YT',
                command: 'insertLiteYouTube'
            }],
            ['code', 'codeblock'],
        ],
        events: {
            load: () => {
                const loader = document.querySelector('.tui-editor-loader')
                if (loader) loader.remove()
                
                const editor = document.getElementById('editor')
                if (editor) editor.style.display = 'block'

            },
            change: () => {
                if (throttle_timer)
                    clearTimeout(throttle_timer)

                throttle_timer = setTimeout(function () {
                    const content_textarea = document.getElementById('post-content') as HTMLTextAreaElement
                    if (content_textarea) content_textarea.value = editor.getMarkdown()
                }, 750)
            }
        }
    })

    editor.addCommand('markdown', 'insertLiteYouTube', () => {
        const youtubeId = prompt('YouTube video ID');

        if (!youtubeId) return;

        const html = `<lite-youtube videoid="${youtubeId}" posterquality="maxresdefault" autoload></lite-youtube>`;

        editor.insertText(html);
    });

    const preview = document.querySelector('.toastui-editor-contents')
    if (preview)
        preview.className = 'prose'

    editor.setMarkdown(content)
</script>

