---
import Wrapper from '@components/compositions/Wrapper.astro';

interface Props {
    max_width?: string;
}

const { max_width = '80rem' } = Astro.props
---

<div class="[ post-content ][ slide-up ]">
    <Wrapper padding_block="var(--space-xl)" neocom={true} max_width={max_width} centered={true}>
        <slot />
    </Wapper>
</div>

<style is:global lang="scss">
    .post-content {
        min-height: 100vh;

        * {
            scroll-margin-top: var(--space-3xl);
        }
    }
</style>